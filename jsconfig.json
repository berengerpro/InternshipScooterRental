{
  "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
          "@app/*" : ["./*"] // alias similar to defined in babel.config.js
      },
      "sourceMap": true,
      "target": "ES6"
  },
  "exclude": [
      "node_modules"
  ]
}
